source 'https://rubygems.org'

group :development do
  gem 'php-server', '0.0.7'

  # assets
  gem 'sass'
  gem 'compass'
  gem 'coffee-script'
  gem 'uglifier'
  # gem 'juicer'

  # task runner
  gem 'guard'
  gem 'guard-compass'
  gem 'guard-coffeescript'
  # gem 'guard-uglify'
  # gem 'guard-livereload'

  # debug
  gem 'tapp'
  gem 'pry'
end

group :development, :test do
  gem 'rake'
  gem 'rspec'
  gem 'capybara'
  gem 'poltergeist'

  # task runner
  gem 'guard-phpunit2', git: 'git@github.com:ae06710/guard-phpunit2.git'
end
